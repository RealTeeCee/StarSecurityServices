@model Models.Branch

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" style="width:100%" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Input Branch Name">
            </div>

            <div class="form-group col-md-6">
                <label for="Instagram">Instagram</label>
                <input type="text" class="form-control" asp-for="@Model.Instagram" placeholder="Input Instagram">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Input Email">
            </div>

            <div class="form-group col-md-6">
                <label for="Twitter">Twitter</label>
                <input type="text" class="form-control" asp-for="@Model.Twitter" placeholder="Input Twitter">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="TimeOpen">Time Open</label>
                <input type="text" class="form-control" asp-for="@Model.TimeOpen" placeholder="Input TimeOpen">
            </div>

            <div class="form-group col-md-6">
                <label for="Facebook">Facebook</label>
                <input type="text" class="form-control" asp-for="@Model.Facebook" placeholder="Input Facebook">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Phone">Phone</label>
                <input type="text" class="form-control" asp-for="@Model.Phone" placeholder="Input Phone">
            </div>

            <div class="form-group col-md-6">
                <label for="Youtube">Youtube</label>
                <input type="text" class="form-control" asp-for="@Model.Youtube" placeholder="Input Youtube">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Latitude">Latitude</label>
                <input type="text" class="form-control" asp-for="@Model.Latitude" placeholder="Input Latitude">
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label for="Longitude">Longitude</label>
                <input type="text" class="form-control" asp-for="@Model.Longitude" placeholder="Input Longitude">
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Address">Address</label>
                <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Input Address">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="GoogleMap">Google Map Source</label>
                <textarea type="text" class="form-control" asp-for="@Model.GoogleMap" placeholder="Input GoogleMap Source"></textarea>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">Current Image</label><br />
                <img src="~/media/branches/@Model.Image" width="150" height="150" alt="" />
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">New Branch Image</label>
                <input asp-for="ImageUpload" class="form-control" />
                <img src="" id="imgUpload" alt="" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update</button>      
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
   
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            $("#ImageUpload").change(function () {
                readUrl(this);
            });
        </script>
}