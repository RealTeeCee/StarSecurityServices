@model IEnumerable<Models.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3>List Branches</h3>
            <span class="d-block m-t-5">               
                    <a asp-action="Create">Create New</a>               
            </span>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                       
                        <tr>
                            
                            <th>NO</th>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>Manage</th>
                            <th>Action</th>
                            
                        </tr>
                        
                    </thead>
                    <tbody>
                         @foreach (var item in Model) {
                        <tr class="bg-dark">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><img src="~/media/branches/@item.Image" width="200" /></td>
                            <td>@item.Email</td>
                            <th>@item.Address</th>
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt</td>
                            <td>
                                <a class="btn btn-primary" asp-action="EditUsersToBranch" asp-route-id="@item.Id">Add Users</a>
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new {  id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new {  id = item.Id }) |
                                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                            </td>
                        </tr>    
                        }
                    </tbody>
                </table>
                <div class="d-flex w-100 justify-content-center">
                    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/branch" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }