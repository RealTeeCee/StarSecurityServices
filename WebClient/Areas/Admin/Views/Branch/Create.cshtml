@model Models.Branch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form asp-action="Create" style="width:100%">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Input Branch Name">
            </div>

            <div class="form-group col-md-6">
                <label for="Instagram">Instagram</label>
                <input type="text" class="form-control" asp-for="@Model.Instagram" placeholder="Input Instagram">
            </div>            
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Input Email">
            </div>

            <div class="form-group col-md-6">
                <label for="Twitter">Twitter</label>
                <input type="text" class="form-control" asp-for="@Model.Twitter" placeholder="Input Twitter">
            </div>       
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="TimeOpen">Time Open</label>
                <input type="text" class="form-control" asp-for="@Model.TimeOpen" placeholder="Input TimeOpen">
            </div>

            <div class="form-group col-md-6">
                <label for="Facebook">Facebook</label>
                <input type="text" class="form-control" asp-for="@Model.Facebook" placeholder="Input Facebook">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Phone">Phone</label>
                <input type="text" class="form-control" asp-for="@Model.Phone" placeholder="Input Phone">
            </div>

            <div class="form-group col-md-6">
                <label for="Youtube">Youtube</label>
                <input type="text" class="form-control" asp-for="@Model.Youtube" placeholder="Input Youtube">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Address">Address</label>
                <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Input Address">
            </div>
        </div>
    
        <div class="form-row d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Create</button>      
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
   
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
