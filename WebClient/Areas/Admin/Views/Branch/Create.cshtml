@model Models.Branch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<form asp-action="Create" style="width:100%" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
    <input type="hidden" asp-for="Id" class="form-control" />
   
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Input Branch Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="Instagram">Instagram</label>
            <input type="text" class="form-control" asp-for="@Model.Instagram" placeholder="Input Instagram" value="#">
        </div>            
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Email">Email Contact</label>
            <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Input Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="Twitter">Twitter</label>
            <input type="text" class="form-control" asp-for="@Model.Twitter" placeholder="Input Twitter" value="#">
        </div>       
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="TimeOpen">Time Open</label>
            <input type="text" class="form-control" asp-for="@Model.TimeOpen" placeholder="Input TimeOpen">
        </div>

        <div class="form-group col-md-6">
            <label for="Facebook">Facebook</label>
            <input type="text" class="form-control" asp-for="@Model.Facebook" placeholder="Input Facebook" value="#">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Phone">Phone</label>
            <input type="number" class="form-control" asp-for="@Model.Phone" placeholder="Input Phone Number">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="Youtube">Youtube</label>
            <input type="text" class="form-control" asp-for="@Model.Youtube" placeholder="Input Youtube"value="#">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Address">Address</label>
            <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Input Address" value="#">
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="ImageUpload" class="form-control" />
            <img src="" id="imgUpload" alt="" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Latitude">Latitude</label>
            <input type="text" class="form-control" asp-for="@Model.Latitude" placeholder="Input Latitude">
            <span asp-validation-for="Latitude" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="Longitude">Longitude</label>
            <input type="text" class="form-control" asp-for="@Model.Longitude" placeholder="Input Longitude">
        </div>
    </div>
    
    <div class="form-row d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Create</button>      
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
    
   
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUpload").change(function () {
            readUrl(this);
        });
    </script>
}