            {
                @foreach (var currentRoleName in currentRolesName)
                {
                    @if ((!currentRoleName.Equals("GeneralAdmin") && !currentRoleName.Equals("SuperAdmin") && await userManager.IsInRoleAsync(user, "GeneralAdmin")) ||
