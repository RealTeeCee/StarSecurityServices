@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

@if(Model.Any()){
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
        Add New Role</a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a  class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                <a  class="btn btn-danger">Detete</a>
            </div>
        </div>
    }    
}
else{
    <div class="card">
        <div class="card-header">
             No roles created yet
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">
            Use the button below to create a role
        </h5>
        <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
            Create Role
        </a>
    </div>
}