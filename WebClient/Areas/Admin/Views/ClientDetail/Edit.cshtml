@model Models.ClientDetail

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" style="width:100%" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Input Category Name">
            </div>

            <div class="form-group col-md-6">
                <label for="Title">Title</label>
                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="Input Title">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Service" class="control-label"></label>
                <select asp-for="ServiceId" asp-items="@ViewBag.Service" class="form-control">
                    <option value="0">Choose Service</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="User" class="control-label"></label>
                <select asp-for="UserId" asp-items="@ViewBag.User" class="form-control">
                    <option value="0">Choose User</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Address">Address</label>
                <textarea asp-for="Address" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-row d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        CKEDITOR.replace("Description");
        $("#ImageUpload").change(function () {
            readUrl(this);
        });
    </script>

}
