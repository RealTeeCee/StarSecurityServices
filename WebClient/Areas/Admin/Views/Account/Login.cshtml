@model Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>

	<title>Login - Star Security Service</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="description" content="" />
	<meta name="keywords" content="">
	<meta name="author" content="Phoenixcoded" />
	<!-- Favicon icon -->
	<link rel="icon" href="~/admin/assets/images/favicon.ico" type="image/x-icon">

	<!-- vendor css -->
	<link rel="stylesheet" href="~/admin/assets/css/style.css">
	
</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
	    <div class="auth-content text-center">
		
            @*<img src="~/img/logo.png" alt="Logo Star Security" style="height: 14vh;" class="img-fluid mb-4">*@
		    <div class="card borderless">
			    <div class="row align-items-center ">
				    <div class="col-md-12">
					    <div class="card-body">
                            <partial name="_NotificationPartial" />
                            <h4 class="mb-3 f-w-400">Signin</h4>
                            <hr>
						    <form asp-action="Login">
                                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                                <div class="form-group mb-3" style="text-align:left">
                                    <input asp-for="UserNameOrEmail" type="text" class="form-control" id="Email" placeholder="Username or Email Address">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4" style="text-align:left">
                                    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="custom-control custom-checkbox text-left mb-4 mt-2">
                                    <input type="checkbox" asp-for="RememberMe" class="custom-control-input" id="asp-for=" RememberMe"">
                                    <label class="custom-control-label" for="asp-for=" RememberMe">@Html.DisplayNameFor(model => model.RememberMe)</label>
                                </div>

                                <hr>
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn btn-primary w-100" />
                                </div>

                                <hr>
                                <p class="mb-2 text-muted">Forgot password? <a asp-action="ForgotPassword" class="f-w-400">Reset</a></p>
                                <p class="mb-0 text-muted">Don’t have an account? <a href="#" class="f-w-400">Back to Client</a></p>

                            </form>
					    </div>
				    </div>
			    </div>
		    </div>
	    </div>
    </div>
    <!-- [ auth-signin ] end -->

<!-- Required Js -->
<script src="~/admin/assets/js/vendor-all.min.js"></script>
<script src="~/admin/assets/js/plugins/bootstrap.min.js"></script>

<script src="~/admin/assets/js/pcoded.min.js"></script>

</body>

</html>
