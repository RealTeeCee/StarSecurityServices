@model Models.User

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>User Profile</h1>

<div>    
    <hr />
    <dl class="row">      
        <dt class="col-sm-2">
            Avatar
        </dt>
        <dd class="col-sm-10">
            <img src="~/media/profiles/@Model.Image" width="200" alt="" />
        </dd>
        

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<br />
<br />
<br />
<div>
    <a asp-action="ChangePassword" asp-controller="Account" asp-route-id="@Model.Id">Change Password</a>
</div>

