@model Models.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <title>Login - Star Security Service</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/img/logo_admin_thumb.png" type="image/x-icon" />

    <!-- vendor css -->
    <link rel="stylesheet" href="~/admin/assets/css/style.css">

</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">

            @*<img src="~/img/logo.png" alt="Logo Star Security" style="height: 14vh;" class="img-fluid mb-4">*@
            @*<img src="~/img/logo_admin_01.png" alt="Star Security Logo" style="width: 100px;" class="logo">*@
            <div class="card borderless">
                <div class="row align-items-center ">
                    
                    <div class="col-md-12">
                        <partial name="_NotificationPartial" />
                        <div class="card-body">
                            <partial name="_NotificationPartial" />
                            <h4 class="mb-3 f-w-400">Forgot Password</h4>
                            <hr>

                            <form asp-action="ForgotPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                 <div class="form-group mb-3" style="text-align:left">
                                    <input asp-for="Email" type="text" class="form-control" id="Email" placeholder="Input your email...">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Send" class="btn btn-primary w-100" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->
    <!-- Required Js -->
    <script src="~/admin/assets/js/vendor-all.min.js"></script>
    <script src="~/admin/assets/js/plugins/bootstrap.min.js"></script>

    <script src="~/admin/assets/js/pcoded.min.js"></script>

</body>

</html>








