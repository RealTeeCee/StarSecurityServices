@model IEnumerable<Models.CategoryBranch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <span class="d-block m-t-5">               
                <a asp-action="OnChangeCategoryBranch" class="btn btn-primary">Update Category In Branch</a>                
            </span>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>

                        <tr>
                            <th>Branches</th>                          
                            <th>Categories</th>
                            <th>Updated At</th>                                                        
                        </tr>

                    </thead>
                    <tbody>
                        <tr>
                            <td>HCM</td>
                            <td>Secu, Vacancy, Project</td>
                            <td>12/28/2022 2:54:00 PM</td>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr class="bg-dark">                                
                                <td>@item.Branch.Name</td>                                
                                <td>@item.Category.Name</td>
                                <td>@item.UpdatedAt</td>                                                  
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex w-100 justify-content-center">
                    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/branch" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


