@model Models.ViewCategoryBranch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CategoryBranch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OnChangeCategoryBranch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label>
                    Branch
                </label>
                @* <select id="BranchId" asp-items="@ViewBag.Branch" >
                    <option value="0">Choose a Branch</option>
                </select>*@

                <select class="form-control" name="BranchId">
                    <option value="0">Choose a Branch</option>
                    @foreach (var item in Model.Branches)
                    {
                            <option value="@item.Id">
                            @item.Name
                            </option>                        
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <label>
                    Categories
                </label>
                <div class="form-control">
                    @*                <label asp-for="CategoryId" class="control-label"></label>
                    <input asp-for="CategoryId" class="form-control" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>*@
                    @foreach (var item in Model.Categories)
                    {                       
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@item.Id" name="CategoryId" >@item.Name
                            </div>
                        @*<input type="checkbox" name="CategoryId" value="@item.Id" />@item.Name <br/>*@
                    }       
                </div>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
