@model Models.Vacancy

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Vacancy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<input type="hidden" asp-for="Id" class="form-control" />*@
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Image" />

            <div class="form-group">
                <label asp-for="Image" class="control-label">Current Image</label>
                <img src="~/media/vacancies/@Model.Image" width="200" alt="" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">New Image</label>
                <input asp-for="ImageUpload" class="form-control" />
                <img src="" id="imgUpload" alt="" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    @if (Model.Status == 1)
                    {
                        <option value="0">In Active</option>
                        <option value="1" selected>Active</option>
                    }
                    else
                    {
                        <option value="0" selected>In Active</option>
                        <option value="1">Active</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="User" class="control-label"></label>
            <select asp-for="UserId" asp-items="@ViewBag.User" class="form-control">
            <option value="0">Choose User</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Category" class="form-control">
                    <option value="0">Choose Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Branch" class="control-label"></label>
                <select asp-for="BranchId" asp-items="@ViewBag.Branch" class="form-control">
                    <option value="0">Choose a Branch</option>
                </select>
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Noted" class="control-label"></label>
                <textarea asp-for="Noted" class="form-control"></textarea>
                <span asp-validation-for="Noted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        CKEDITOR.replace("Description");
        CKEDITOR.replace("Noted");
        $("#ImageUpload").change(function () {
            readUrl(this);
        });
    </script>
}