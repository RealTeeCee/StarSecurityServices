@model IEnumerable<Models.Testimonial>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3>List Testimonials</h3>
            <span class="d-block m-t-5">
                <a asp-action="Create">Create New</a>
            </span>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>

                        <tr>

                            <th>
                                NO
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>                    
                            <th>
                                Image
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UpdatedAt)
                            </th>
                            <th>Action</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="bg-dark">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>                                
                                <td><img src="~/media/testimonials/@item.Image" width="200" alt="" /></td>
                                <td>@item.CreatedAt</td>
                                <td>@item.UpdatedAt</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {  id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new {  id = item.Id }) |
                                    <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex w-100 justify-content-center">
                    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/testimonial" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
                </div>
            </div>
        </div>
    </div>
</div>
