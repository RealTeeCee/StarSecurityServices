@model Models.Testimonial

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" style="width:100%" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Input Category Name">
            </div>

            <div class="form-group col-md-6">
                <label for="Title">Title</label>
                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Input Title">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">Current Image</label>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">
                    New Image
                </label>
                <input asp-for="ImageUpload" class="form-control" />

                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                @*Current*@
                <img src="~/media/testimonials/@Model.Image" width="200" height="200" alt="" />
            </div>

            <div class="form-group col-md-6">
                @*New Image *@
                <img src="" id="imgUpload" alt="" />

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-row d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        CKEDITOR.replace("Description");
        $("#ImageUpload").change(function(){
            readUrl(this);
        });
    </script>

}
