                            <li class="nav-item">
                                <a asp-controller="Administration" asp-action="listusers" asp-area="Admin" class="nav-link">
                                    <span class="pcoded-micon">
                                        <i class="feather icon-users"></i>
                                    </span>
                                    <span class="pcoded-mtext">Manage Users</span>
                                </a>
                            </li>
