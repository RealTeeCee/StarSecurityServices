@model Models.Contact

@{
    ViewData["Title"] = "SendMail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>SendMail</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendMail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                            
                <input type="hidden" asp-for="Id" class="form-control" />
                <input type="hidden" asp-for="Email" class="form-control" />
                <input type="hidden" asp-for="Name" class="form-control" />

            <div class="form-group">
                <label asp-for="ReplyMessage" class="control-label"></label>
                <textarea asp-for="ReplyMessage" class="form-control"></textarea>
                <span asp-validation-for="ReplyMessage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Mail" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        CKEDITOR.replace("ReplyMessage");

        $("#ImageUpload").change(function () {
            readUrl(this);
        });
    </script>
}