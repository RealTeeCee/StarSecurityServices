@model Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" style="width:100%" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Input Category Name">
            </div>
            <div class="form-group col-md-6">
                <label for="Address">Address</label>
                <input type="text" class="form-control" asp-for="Slug" placeholder="Input Slug">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">Current Image</label><br />
                <img src="~/media/categories/@Model.Image" width="150" height="150" alt="" />
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Image" class="control-label">New Category Image</label>
                <input asp-for="ImageUpload" class="form-control" />
                <img src="" id="imgUpload" alt="" />
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
        </div>       

        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>

</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ImageUpload").change(function () {
            readUrl(this);
        });
    </script>
}
