@model Models.Service

@{
    ViewData["Title"] = "DetailService";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/tailwind.css" rel="stylesheet" />
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@ViewBag.ServiceName</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Services</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">@ViewBag.CategoryName</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center">
                <div class="bg-primary mb-3 mx-auto" style="width: 60px; height: 2px;"></div>
                <h1 class="display-5 mb-5 font-bold">@Model.Name</h1>
                <h2 class="text-2xl mb-5 text-gray-300">@Model.ShortDescription</h2>
            </div>
            <div class="row flex justify-center">
                <div class="w-3/4 mb-5">
                    <img src="~/media/services/@Model.Image" class="object-cover w-full" alt="">
                </div>
                <div>
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
    </div>
    <!-- Service End -->
    <!-- Related Service -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-primary mb-3 mx-auto" style="width: 60px; height: 2px;"></div>
                <h1 class="display-5 mb-5 flex">
                    @(ViewBag.CategorySlug == "vacancy-service" ? "Vacancy Related" : "Service Related")
                </h1>
            </div>
            <div class="row g-4">
            @{
                int i = 1;
            }
            @if(ViewBag.ServiceRelated.Count > 0)
            {
                @foreach (var item in ViewBag.ServiceRelated)
                {
                    <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.@(i)s">
                        <!-- thêm div123 -->
                        <div class="team-item div123">
                            <div class="overflow-hidden position-relative">
                                <img class="img-fluid w-full h-60 object-cover" src="~/media/services/@item.Image" alt="">
                                <div class="team-social">
                                    <!-- thêm btn-hover -->
                                    <a class="btn btn-primary" asp-area="Client" asp-action="DetailService" asp-controller="Category" asp-route-categorySlug="@ViewBag.CategorySlug" asp-route-serviceSlug="@item.Slug">View Detail</a>
                                </div>
                            </div>
                            <div class="text-center p-4">
                                <h5 class="mb-0">@item.Name</h5>
                                <span class="text-primary">@item.ShortDescription</span>
                            </div>
                        </div>
                    </div>
                    i += 2;
                }
            }
            else 
            {
                <h2 class="text-2xl mb-5 text-gray-300">Empty Data...</h2>
            }
            </div>
        </div>
    </div>



